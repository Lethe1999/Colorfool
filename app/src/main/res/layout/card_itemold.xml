<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/card_pic"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageButton
                android:id="@+id/card_btn_star"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_drawer_star"
                android:scaleType="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageButton
                android:id="@+id/card_btn_love"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/card_love1"
                app:layout_constraintRight_toLeftOf="@id/card_btn_star"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageButton
                android:id="@+id/card_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_of_card_userhead"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/card_colorbtn1"
                style="@style/CardColorButton"
                android:layout_marginLeft="50dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/card_pic" />

            <Button
                android:id="@+id/card_colorbtn2"
                style="@style/CardColorButton"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/card_pic" />

            <Button
                android:id="@+id/card_colorbtn3"
                style="@style/CardColorButton"
                android:layout_marginLeft="150dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/card_pic" />

            <Button
                android:id="@+id/card_colorbtn4"
                style="@style/CardColorButton"
                android:layout_marginLeft="200dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/card_pic" />

            <Button
                android:id="@+id/card_colorbtn5"
                style="@style/CardColorButton"
                android:layout_marginLeft="250dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintTop_toBottomOf="@id/card_pic" />

            <Button
                android:id="@+id/card_colorbtn6"
                style="@style/CardColorButton"
                android:layout_marginLeft="50dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/card_colorbtn7"
                style="@style/CardColorButton"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/card_colorbtn8"
                style="@style/CardColorButton"
                android:layout_marginLeft="150dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/card_colorbtn9"
                style="@style/CardColorButton"
                android:layout_marginLeft="200dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/card_colorbtn10"
                style="@style/CardColorButton"
                android:layout_marginLeft="250dp"
                app:layout_constraintLeft_toLeftOf="@id/card_pic"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>